@model Project_Exam.Models.Breed
@{
    ViewBag.Title = "Edit";
}

<div class="row mb-2 ">
    <div class="col-2">
        <a title="info" class="btn btn-outline-dark" href="@Url.Action("info","Breeds", new {@id = Model.BreedId })"><i class="bi bi-info-lg"></i></a>
        <a title="Delete" class="btn btn-outline-dark" href="@Url.Action("Delete","Breeds", new {@id = Model.BreedId })"><i class="bi bi-trash"></i></a>
    </div>

    <div class=" text-center col-6">
        <h2>Edit Breed Info</h2>
    </div>
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.BreedId)
    <div class="form-group row offset-3 mb-2">
        @Html.LabelFor(x => x.BreedName, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.BreedName, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.BreedName, "", new { @class = "text-danger col-4" })
    </div>
    <div class="form-group row offset-3 mb-2">
        @Html.LabelFor(x => x.AverageAge, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.AverageAge, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.AverageAge, "", new { @class = "text-danger col-4" })
    </div>
    <div class="form-group row offset-3 mb-2">
        @Html.LabelFor(x => x.Description, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger col-4" })
    </div>
    <div class="form-group row offset-3 mb-2">

        <div class="col-4 offset-3">
            <button type="submit" class="btn btn-success">Save&nbsp;</button>
        </div>
    </div>
}

<div class="row">
    <div class="col-2">
        @Html.ActionLink("Back to List", "Index", "Breeds", new { @class = "btn btn-link" })
    </div>
</div>

@section styles{

    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

