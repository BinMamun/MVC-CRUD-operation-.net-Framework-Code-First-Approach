<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 70px;
            background: #E6EED6;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-light bg-warning navbar-expand-md fixed-top">
        <div class="container-fluid">
            <span class="navbar-brand">Monthly Exam</span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Breeds", "Index", "Breeds", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Cats", "Index", "Cats", new { }, new { @class = "nav-link" })
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid" style="min-height:calc(100vh - 140px)">
        @RenderBody()
    </div>
    <hr/>
    <footer class="container text-center">
        &copy;@DateTime.Now.Year - MVC5 Application
    </footer>
    @RenderSection("scripts", false)
</body>
</html>